// =============================================================
// Инициализация формы
function CheckSciTE(scite_path){
	if (fso.FileExists(scite_path + "\\SciTE.exe")){
		return true;
	}else{
		return false;
	}
}

function FindSciTE(){
	var scite_path = script_path;
	if (CheckSciTE(scite_path)){
		return scite_path;
	}else{
		scite_path = scite_path.replace(/\\[^\\]+$/,'');
		if (CheckSciTE(scite_path)){
			return scite_path;
		}else{
			return "";
		}
	}
}

function LoadForm(){
	scite_path = FindSciTE();
	if (scite_path === ""){
		alert("Can't find SciTE!\nPlease run this script from folder with SciTE");
		self.close();
	}

	CheckLanguage();
	CheckAssociations();
	CheckOpenfor();
	CheckSession();
	CheckHTML_def();
	CheckHTML();
	CheckHelper();
}

